    <!-- Page Header -->
<header class="masthead">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4x">
        <div class="site-heading">
          <h1>Pokedex</h1>
        </div>
      </div>
    </div>
  </div>
</header>
<hr>
<% if notice.present? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<div class="container">
  <div class="row col-md-4x">
    <%= link_to 'New Pokedex', new_pokedex_path, :class=>"btn btn-primary float-left mb-2" %>
    <hr>
    <table class="table table-striped" border="1"">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Healt Point</th>
          <th>Attack</th>
          <th>Defence</th>
          <th>Speed</th>
          <th>Element Type</th>
          <th colspan="3" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @pokedexes.each do |pokedex| %>
          <tr>
            <td><%= pokedex.name.capitalize  %></td>
            <td><%= pokedex.base_health_point %></td>
            <td><%= pokedex.base_attack %></td>
            <td><%= pokedex.base_defence %></td>
            <td><%= pokedex.base_speed %></td>
            <td><%= pokedex.element_type.capitalize  %></td>
            <td><%= link_to 'Show', pokedex, :class=>"btn btn-primary float-right" %></td>
            <td><%= link_to 'Edit', edit_pokedex_path(pokedex), :class=>"btn btn-warning float-right" %></td>
            <td><%= link_to 'Destroy', pokedex, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger float-right" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="digg_pagination float-right">
      <%= will_paginate @pokedex %>
    </div>
  </div>
</div>
