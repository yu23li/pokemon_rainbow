<!-- - Page Header -->
<header class="masthead">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4x">
        <div class="site-heading">
          <h1>Skills</h1>
        </div>
      </div>
    </div>
  </div>
</header>
<hr>
<div class="container">
  <% if notice.present? %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>
  <div class="row col-md-4x">
    <%= link_to 'New Skill', new_skill_path, :class=>"btn btn-primary float-left mb-2" %>
    <hr>
    <table class="table table-striped" border="1"">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Power</th>
          <th>Max pp</th>
          <th>Element type</th>
          <th colspan="3" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @skills.each do |skill| %>
          <tr>
            <td><%= skill.name.capitalize  %></td>
            <td><%= skill.power %></td>
            <td><%= skill.max_pp %></td>
            <td><%= skill.element_type.capitalize %></td>
            <td><%= link_to 'Show', skill, :class => "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_skill_path(skill), :class => "btn btn-warning"%></td>
            <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="digg_pagination float-right">
      <%= will_paginate @skills %>
    </div>
  </div>
</div>
